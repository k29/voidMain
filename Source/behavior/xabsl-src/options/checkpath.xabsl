option checkpath
	{
		common decision
			{
				if(pathreturn==DOWALK)
					goto pathfollow; 
				
				/*else if(pathreturn==DOKICK)
					goto*/

				else if(pathreturn==NOPATH)
					goto ballfollow;
				else if(pathreturn == DOORIENT)
					goto orient;
			}

		
		initial state pathfollow
			{
				action
					{
						doPathToWalk();
					}
			}

		state ballfollow
			{
				action
					{
						ballfollowing();
					}

			}

		state orient
		{
			action
			{
				doOrient();
			}
		}	
	} 